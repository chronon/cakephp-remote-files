{
  "name": "chronon/remote-files",
  "description": "RemoteFiles plugin for CakePHP 4",
  "type": "cakephp-plugin",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "cakephp/cakephp": "4.4.*",
    "guzzlehttp/guzzle": "^7.0",
    "league/commonmark": "^2.2",
    "league/flysystem-aws-s3-v3": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "RemoteFiles\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RemoteFiles\\Test\\": "tests/",
      "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
    }
  }
}
